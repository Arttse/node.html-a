# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# HTML
[**.html]
indent_size = 4

# JavaScript and JSON
[**.{ts,js,json,yml,yaml}]
indent_size = 2
insert_final_newline = true

# Markdown and text
[**.{markdown,mdown,mkdn,mkd,md,txt}]
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false
